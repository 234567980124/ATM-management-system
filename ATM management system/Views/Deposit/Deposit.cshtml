@model ATM_management_system.Models.DepositModel

@{
    ViewBag.Title = "Deposit";
}

<h2>Deposit</h2>

@using (Html.BeginForm("Deposit", "Deposit", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        @Html.LabelFor(model => model.AccountNumber, new { @class = "control-label" })
        @Html.TextBoxFor(model => model.AccountNumber, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.AccountNumber)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Amount, new { @class = "control-label" })
        @Html.TextBoxFor(model => model.Amount, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Amount)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Timestamp, new { @class = "control-label" })
        @Html.TextBoxFor(model => model.Timestamp, new { @class = "form-control", @readonly = "readonly" })
        @Html.ValidationMessageFor(model => model.Timestamp)
    </div>

    <div class="form-group">
        <input type="submit" value="Deposit" class="btn btn-primary" />
    </div>
}

@if (!string.IsNullOrEmpty(ViewBag.Message))
{
    <div class="alert alert-success">
        @ViewBag.Message
    </div>
}

@if (!ViewData.ModelState.IsValid && string.IsNullOrEmpty(ViewBag.Message))
{
    <div class="alert alert-danger">
        @Html.ValidationSummary(true)
    </div>
}

}


