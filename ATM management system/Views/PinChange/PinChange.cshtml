@model ATM_management_system.Models.User

@{
    ViewBag.Title = "PinChange";
}

<h2>Pin Change</h2>

@using (Html.BeginForm("PinChange", "PinChange", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        @Html.LabelFor(model => model.AccountNumber, new { @class = "control-label" })
        @Html.TextBoxFor(model => model.AccountNumber, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.AccountNumber)
    </div>

    <div class="form-group">
        @Html.Label("New Pin", new { @class = "control-label" })
        @Html.Password("newpin", null, new { @class = "form-control" })
    </div>

    <div class="form-group">
        <input type="submit" value="Change Pin" class="btn btn-primary" />
    </div>
}

@if (!string.IsNullOrEmpty(ViewBag.Message))
{
    <div class="alert alert-success">
        @ViewBag.Message
    </div>
}

@if (!ViewData.ModelState.IsValid && string.IsNullOrEmpty(ViewBag.Message))
{
    <div class="alert alert-danger">
        @Html.ValidationSummary(true)
    </div>
}

